{
  // ------------------------------------------------------------
  // ðŸš€ TypeScript configuration for Vercel + Express (ESM build)
  // ------------------------------------------------------------
  "compilerOptions": {
    /* Folder structure */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Modern Node environment (ESM aware) */
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* ESM compatibility helpers */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Emit options */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "importHelpers": true,

    /* Strictness & safety */
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,

    /* Module resolution tweaks */
    "moduleDetection": "force",

    /* Path aliases for clean imports */
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@middlewares/*": ["middlewares/*"],
      "@database/*": ["database/*"],
      "@routes/*": ["routes/*"]
    }
  },

  /* Include the source directory for compilation */
  "include": ["src"],

  /* Optional: explicitly exclude build artifacts */
  "exclude": ["node_modules", "dist", ".vercel"]
}
